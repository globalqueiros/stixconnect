# ===========================================
# StixConnect - Variáveis de Ambiente
# ===========================================
# Copie este arquivo para .env e preencha os valores

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=mysql://user:password@localhost:3306/stixconnect
DB_HOST=localhost
DB_USER=stix_prod_rw
DB_PASSWORD=your_password_here
DB_NAME=stix_app_user
DB_PORT=3306

# ===========================================
# JWT / AUTENTICAÇÃO
# ===========================================
SECRET_KEY=your_super_secret_key_here_minimum_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# ZOOM API (Server-to-Server OAuth)
# ===========================================
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# ===========================================
# AWS S3 (Upload de arquivos)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=stixconnect-files

# ===========================================
# TWILIO (Notificações SMS)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# FRONTEND (Next.js)
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Variáveis públicas (expostas no browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# STRIPE (Pagamentos - Nexus Admin)
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ===========================================
# APLICAÇÃO
# ===========================================
APP_NAME=StixConnect
DEBUG=true
NODE_ENV=development
